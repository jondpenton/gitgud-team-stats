enum Role {
  MAIN_TANK
  OFF_TANK
  HITSCAN_DPS
  PROJECTILE_DPS
  MAIN_SUPPORT
  FLEX_SUPPORT
  SUB
  PLAYER
}

type Player {
  id: ID! @id
  bnet: String! @unique
  discord: String! @unique
  role: Role!
  team: Team @relation(name: "TeamPlayer")
}

type Team {
  id: ID! @id
  name: String! @unique
  players: [Player!] @relation(name: "TeamPlayer")
  slug: String! @unique
  updatedAt: DateTime! @updatedAt
}
